<Page x:Class="Installer.Page0Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Installer"
      mc:Ignorable="d" 
      d:DesignWidth="725"
      d:DesignHeight="455"
      Title="Willkommen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" MouseDown="Image_MouseDown" Background="Blue" BorderBrush="#222" BorderThickness="0,0,1,0">
            <Grid>
                <Image VerticalAlignment="Stretch" HorizontalAlignment="Left" Stretch="None" Source="Resources/Welcome.png"></Image>
                <Button Content="Install" Click="Install_Click" VerticalAlignment="Bottom" Height="32" Margin="5" FontFamily="Calibri" FontSize="20" FontWeight="Light"></Button>
            </Grid>
        </Border>

        <Label Grid.Column="1">Text</Label>
    </Grid>
</Page>
